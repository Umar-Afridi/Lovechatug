
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper: Checks if any user is signed in
    function isAuthenticated() {
      return request.auth != null;
    }

    // =========================================================================
    // 1. Users Collection (Sign-up FIX)
    // =========================================================================
    match /users/{userId} {
      // FIX: Allow 'create' (Sign-up) and 'update' (Profile Change) 
      // ONLY if the UID matches the document ID.
      allow create, update: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow any signed-in user to read any profile (for contact list)
      allow read: if isAuthenticated();

      // Allow any user (even unauthenticated) to query the users collection
      // to find other users by username during signup. THIS IS THE FIX.
      allow list: if true;
    }

    // =========================================================================
    // 2. Friend Requests
    // =========================================================================
    match /friendRequests/{requestId} {
      allow create: if request.auth != null && request.resource.data.senderId == request.auth.uid;
      allow read, update, delete: if request.auth != null && (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
      allow list: if request.auth != null && 
                    ((request.query.where[0].field == 'receiverId' && request.query.where[0].op == '==' && request.query.where[0].value == request.auth.uid) ||
                     (request.query.where[0].field == 'senderId' && request.query.where[0].op == '==' && request.query.where[0].value == request.auth.uid));
    }
    
    // =========================================================================
    // 3. Chats and Messages
    // =========================================================================
    match /chats/{chatId} {
      allow read, write: if isAuthenticated() && request.auth.uid in resource.data.members;
    }
    
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if isAuthenticated() 
                            && get(/databases/$(database)/documents/chats/$(chatId)).data.members.hasAny([request.auth.uid]);
    }

    // =========================================================================
    // 4. Calls Collection
    // =========================================================================
    match /calls/{callId} {
        allow read, write, delete: if request.auth != null && request.auth.uid in resource.data.participants;
        allow list: if request.auth != null && request.query.where[0].field == 'participants' && request.query.where[0].op == 'array-contains' && request.query.where[0].value == request.auth.uid;
    }

    // =========================================================================
    // 5. Deleted Users (Tombstone)
    // =========================================================================
    match /deletedUsers/{email} {
      allow create: if true;
      allow read, write, delete: if false;
    }

  }
}
