rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function isParticipant(chatDoc) {
      return isSignedIn() && request.auth.uid in chatDoc.data.participants;
    }
    
    function isRoomOwner(roomId) {
      return get(/databases/$(database)/documents/rooms/$(roomId)).data.ownerId == request.auth.uid;
    }
    
    function isRoomMember(roomId) {
      return exists(/databases/$(database)/documents/rooms/$(roomId)/members/$(request.auth.uid));
    }

    // 1. Users Collection
    match /users/{userId} {
      // Any authenticated user can read any profile (needed for chat lists, profiles, etc.)
      allow read: if isSignedIn();
      // A user can create their own profile document
      allow create: if isOwner(userId);
      // A user can only update or delete their own profile
      allow update, delete: if isOwner(userId);
      // Allow username existence checks during signup by anyone
      allow list: if true; 
    }
    
    // 2. Chats Collection
    match /chats/{chatId} {
      // Only participants of the chat can read or write to the chat document
      allow read, write: if isParticipant(resource);
      
      // Messages Sub-collection
      match /messages/{messageId} {
        // Only participants of the parent chat can read or write messages
        allow read, write: if isParticipant(get(/databases/$(database)/documents/chats/$(chatId)));
      }
    }
    
    // 3. Friend Requests Collection
    match /friendRequests/{requestId} {
      // The sender or receiver can read, update, or delete the request
      allow read, update, delete: if isSignedIn() && (isOwner(resource.data.senderId) || isOwner(resource.data.receiverId));
      // Any signed-in user can create a request, but only if they are the sender
      allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
      // Allow querying for requests sent to the current user
      allow list: if isSignedIn();
    }
    
    // 4. Calls Collection
    match /calls/{callId} {
      // A user can query for calls where they are a participant
      allow list: if isSignedIn();
      // Only participants of the call can get, write, or delete the call record
      allow get, write, delete: if isParticipant(resource);
    }

    // 5. Deleted Users Collection (for preventing re-registration, write-only)
    match /deletedUsers/{email} {
      allow create: if true;
      allow read, write, delete: if false;
    }
    
    // 6. Voice Chat Rooms Collection
    match /rooms/{roomId} {
        // Any signed-in user can read room details
        allow read: if isSignedIn(); 
        // Only a signed-in user can create a room, and they must be the owner
        allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
        // Only the room owner can update or delete the room
        allow update, delete: if isRoomOwner(roomId);
        
        // Members Sub-collection
        match /members/{userId} {
            // Only a member of the room can read member details
            allow read: if isRoomMember(roomId);
            // A user can add themselves to a room (join)
            allow create: if isOwner(userId);
            // A user can update their own status (e.g., mute), or the owner can update anyone's status
            allow update: if isOwner(userId) || isRoomOwner(roomId);
            // A user can leave the room, or the owner can kick them
            allow delete: if isOwner(userId) || isRoomOwner(roomId);
        }
        
        // Messages Sub-collection
        match /messages/{messageId} {
          // Any room member can read and create messages
          allow read, create: if isRoomMember(roomId);
          // Only the message sender or the room owner can update/delete a message
          allow update, delete: if isOwner(request.resource.data.senderId) || isRoomOwner(roomId);
        }
    }
  }
}
