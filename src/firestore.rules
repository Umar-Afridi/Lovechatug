rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // --- Utility Functions for Shorter, Readable Rules ---
    // This function checks if the user is authenticated (logged in).
    function isSignedIn() {
      return request.auth != null;
    }

    // This function checks if the user is the owner of a document (e.g., their own user profile).
    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }
    
    // This function checks if a user is a member of a given chat.
    function isChatMember(chatId) {
        return isSignedIn() && request.auth.uid in get(/databases/$(database)/documents/chats/$(chatId)).data.members;
    }
    
    function isParticipant(participants) {
      return request.auth.uid in participants;
    }

    // This function checks if a user is a member of a given voice room.
    function isRoomMember(roomId) {
      return exists(/databases/$(database)/documents/rooms/$(roomId)/members/$(request.auth.uid));
    }
    
    // This function checks if a user is the owner of a given voice room.
    function isRoomOwner(roomId) {
      return get(/databases/$(database)/documents/rooms/$(roomId)).data.ownerId == request.auth.uid;
    }


    // 1. Users Collection (/users/{userId})
    match /users/{userId} {
      // Any signed-in user can read any other user's profile.
      // This is necessary to display user names, avatars, etc., in chats and friend lists.
      allow read: if isSignedIn();
      
      // A user can only create, update, or delete their own profile document.
      allow create, update, delete: if isOwner(userId);
      
      // Allow listing of users (e.g., for search), but client-side logic must filter results.
      // We are allowing this broadly for simplicity, but in a production app,
      // you might add more specific query constraints.
      allow list: if isSignedIn();
    }
    
    // 2. Chats and Messages Collection (/chats/{chatId})
    match /chats/{chatId} {
      // Only members of the chat can read or write to the chat document and its subcollections.
      allow read, write: if isChatMember(chatId);
      
      match /messages/{messageId} {
        // Inherits the parent rule: only chat members can access messages.
        allow read, write: if isChatMember(chatId);
      }
    }
    
    // 3. Friend Requests Collection (/friendRequests/{requestId})
    match /friendRequests/{requestId} {
      // A user can only create a request where they are the sender.
      allow create: if isSignedIn() && request.resource.data.senderId == request.auth.uid;
      
      // Only the sender or the receiver of a request can read, update, or delete it.
      allow read, update, delete: if isSignedIn() && (isOwner(resource.data.senderId) || isOwner(resource.data.receiverId));
    }
    
    // 4. Call History Collection (/calls/{callId})
    match /calls/{callId} {
      // A user can only access a call document if their UID is in the `participants` array.
      allow get, write, delete: if isParticipant(resource.data.participants);
      
      // A user is allowed to perform list queries (e.g., "get my call history"),
      // but the query itself MUST contain `where('participants', 'array-contains', request.auth.uid)`
      // to be successful. This rule enables that secure query.
      allow list: if isSignedIn() && request.query.get('where')[0][2] == request.auth.uid;
    }

    // 5. Deleted Users Collection (/deletedUsers/{email}) - For preventing re-registration
    match /deletedUsers/{email} {
      // Anyone (even unauthenticated users) can write to this collection upon account deletion.
      allow create: if true;
      // No one can read, update, or delete these records.
      allow read, write, delete: if false; 
    }

    // 6. Voice Chat Rooms Collection (/rooms/{roomId})
    match /rooms/{roomId} {
        // Any signed-in user can get a room's details or list all rooms.
        allow get, list: if isSignedIn();
        // A user can only create a room where they are the owner.
        allow create: if isSignedIn() && request.resource.data.ownerId == request.auth.uid;
        // Only the room owner can update or delete it.
        allow update, delete: if isRoomOwner(roomId);
        
        // Rules for the `members` subcollection within a room
        match /members/{userId} {
            // Room members can read the member list.
            allow read: if isRoomMember(roomId);
            // A user can only create their own member document (i.e., join a room).
            allow create: if isOwner(userId);
            // A user can update their own status, or the room owner can update any member.
            allow update: if isOwner(userId) || isRoomOwner(roomId);
            // A user can delete themselves (leave), or the room owner can kick a member.
            allow delete: if isOwner(userId) || isRoomOwner(roomId);
        }
        
        // Rules for the `messages` subcollection within a room
        match /messages/{messageId} {
          // Only room members can read or create messages.
          allow read, create: if isRoomMember(roomId);
          // Only the message sender or the room owner can update or delete a message.
          allow update, delete: if isOwner(request.resource.data.senderId) || isRoomOwner(roomId);
        }
    }
  }
}
