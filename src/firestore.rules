
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to ensure user is signed in
    function isAuthenticated() {
      return request.auth != null;
    }

    // =========================================================================
    // 1. Users Collection (Profile Data & Sign-up FIX)
    // =========================================================================
    match /users/{userId} {
      // FIX: Allow 'create' (Sign-up) and 'update' (Profile Change) 
      // ONLY if the UID matches the document ID.
      allow create, update: if isAuthenticated() && request.auth.uid == userId;
      
      // Allow any signed-in user to read any profile (for contact list/display)
      allow read: if isAuthenticated();

      // Allow anyone to query for usernames to check for availability during signup.
      allow list: if true;
    }

    // =========================================================================
    // 2. Calls Collection (Voice/Video Call Records)
    // =========================================================================
    match /calls/{callId} {
      // Allow read/update only if the user is a participant. 
      allow read, update, create: if isAuthenticated() && request.auth.uid in request.resource.data.participants;
      allow list: if isAuthenticated() && request.query.where[0].field == 'participants' && request.query.where[0].op == 'array-contains' && request.query.where[0].value == request.auth.uid;
    }
    
    // =========================================================================
    // 3. Requests (Friend Requests)
    // =========================================================================
    match /friendRequests/{requestId} {
      // Allow read/update only if the user is the receiver, and create if they are the sender.
      allow read, update, delete: if isAuthenticated() && (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
      allow create: if isAuthenticated() && request.auth.uid == request.resource.data.senderId;
      allow list: if isAuthenticated() && 
                    ((request.query.where[0].field == 'receiverId' && request.query.where[0].op == '==' && request.query.where[0].value == request.auth.uid) ||
                     (request.query.where[0].field == 'senderId' && request.query.where[0].op == '==' && request.query.where[0].value == request.auth.uid));
    }
    
    // =========================================================================
    // 4. Chats and Messages
    // =========================================================================
    match /chats/{chatId} {
      allow read, write: if isAuthenticated() && request.auth.uid in resource.data.members;
    }
    
    match /chats/{chatId}/messages/{messageId} {
      allow read, write: if isAuthenticated() 
                            && get(/databases/$(database)/documents/chats/$(chatId)).data.members.hasAny([request.auth.uid]);
    }

    // =========================================================================
    // 5. Deleted Users (Tombstone)
    // =========================================================================
    match /deletedUsers/{email} {
      allow create: if true;
      allow read, write, delete: if false;
    }

    // =========================================================================
    // 6. Default/Fallback Rule (Restrictive)
    // =========================================================================
    // This denies access to any collection not specifically named above.
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
