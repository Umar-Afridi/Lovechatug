rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // --- Utility Functions (Rulon ko Aasan Banane Ke Liye) ---
    // یہ چیک کرتا ہے کہ یوزر نے Firebase Authentication کے ذریعے لاگ ان کیا ہے یا نہیں
    function isAuthenticated() {
      return request.auth != null;
    }

    // تمام کلیکشنز کے لیے رول
    // Path: /databases/(default)/documents/{document=**}
    match /{document=**} {
      // Allow Read, Write, Create, Update, Delete (complete access) 
      // sirf un users ko jo authenticated hain.
      allow read, write: if isAuthenticated();
    }
  }
}
