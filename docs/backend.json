{
  "entities": {
    "UserProfile": {
      "title": "User Profile",
      "description": "Represents a user's public profile information.",
      "type": "object",
      "properties": {
        "uid": {
          "type": "string",
          "description": "The user's unique ID from Firebase Authentication."
        },
        "displayName": {
          "type": "string",
          "description": "The user's display name."
        },
        "email": {
          "type": "string",
          "format": "email",
          "description": "The user's email address."
        },
        "username": {
          "type": "string",
          "description": "The user's unique username."
        },
        "photoURL": {
          "type": "string",
          "format": "uri",
          "description": "URL of the user's profile picture."
        },
        "friends": {
          "type": "array",
          "description": "An array of UIDs of the user's friends.",
          "items": {
            "type": "string"
          }
        },
        "bio": {
          "type": "string",
          "description": "A short user bio."
        }
      },
      "required": ["uid", "displayName", "email", "username"]
    },
    "FriendRequest": {
      "title": "Friend Request",
      "description": "Represents a friend request from one user to another.",
      "type": "object",
      "properties": {
        "from": {
          "type": "string",
          "description": "The UID of the user who sent the request."
        },
        "to": {
          "type": "string",
          "description": "The UID of the user who received the request."
        },
        "status": {
          "type": "string",
          "enum": ["pending", "accepted", "rejected"],
          "description": "The status of the friend request."
        }
      },
      "required": ["from", "to", "status"]
    },
    "Chat": {
      "title": "Chat Room",
      "description": "Represents a conversation between two or more users.",
      "type": "object",
      "properties": {
        "participants": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "description": "An array of user UIDs who are part of the chat."
        },
        "lastMessage": {
          "type": "object",
          "properties": {
            "content": {
              "type": "string"
            },
            "timestamp": {
              "type": "string",
              "format": "date-time"
            },
            "senderId": {
              "type": "string"
            }
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the chat was created."
        }
      },
      "required": ["participants", "createdAt"]
    },
    "Message": {
      "title": "Chat Message",
      "description": "Represents a single message within a chat.",
      "type": "object",
      "properties": {
        "senderId": {
          "type": "string",
          "description": "The UID of the user who sent the message."
        },
        "content": {
          "type": "string",
          "description": "The text content of the message."
        },
        "timestamp": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the message was sent."
        },
        "type": {
          "type": "string",
          "enum": ["text", "image", "audio"],
          "description": "The type of the message."
        }
      },
      "required": ["senderId", "content", "timestamp", "type"]
    }
  },
  "auth": {
    "providers": ["google.com", "password"]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": {
        "$ref": "#/entities/UserProfile"
      },
      "description": "Stores public user profile information."
    },
    "/friendRequests/{requestId}": {
      "schema": {
        "$ref": "#/entities/FriendRequest"
      },
      "description": "Stores all friend requests between users."
    },
    "/chats/{chatId}": {
      "schema": {
        "$ref": "#/entities/Chat"
      },
      "description": "Top-level collection for chat rooms."
    },
    "/chats/{chatId}/messages/{messageId}": {
      "schema": {
        "$ref": "#/entities/Message"
      },
      "description": "Sub-collection for messages within a specific chat."
    }
  }
}
