rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAuthenticated() {
      return request.auth != null;
    }

    match /users/{userId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }

    match /friendRequests/{requestId} {
      allow create: if isAuthenticated() && request.resource.data.from == request.auth.uid;
      // A user can read a request if they are the sender or the receiver
      allow read: if isAuthenticated() && (resource.data.from == request.auth.uid || resource.data.to == request.auth.uid);
      // A user can update a request (e.g., accept/reject) only if they are the receiver
      allow update: if isAuthenticated() && resource.data.to == request.auth.uid;
      // A user can delete a request if they sent it (cancel) or received it (decline)
      allow delete: if isAuthenticated() && (resource.data.from == request.auth.uid || resource.data.to == request.auth.uid);
      // Allow listing requests only for the user who is the receiver, this is for the notification badge
      allow list: if isAuthenticated() && request.query.where[0][2] == request.auth.uid;
    }
    
    match /chats/{chatId} {
      function isChatMember() {
        // Ensure the user is authenticated and their UID is in the participants array
        return isAuthenticated() && request.auth.uid in resource.data.participants;
      }
      
      allow read, create: if isChatMember();
      allow update: if isChatMember();

      match /messages/{messageId} {
        allow read: if isChatMember();
        // User can only create a message if they are the sender
        allow create: if isChatMember() && request.resource.data.senderId == request.auth.uid;
        // Do not allow updating or deleting messages for integrity
        allow update, delete: if false;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
