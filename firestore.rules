rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // 1. نیا یوزر (جس کا UID ابھی بنا ہے) صرف اپنا یوزر ڈاکومنٹ (پروفائل) بنا سکتا ہے۔
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
    }

    // 2. تمام لاگ اِن یوزرز کو تمام ڈیٹا (چیٹ، فرینڈز، وغیرہ) پڑھنے اور لکھنے کی مکمل اجازت۔
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
