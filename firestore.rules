rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Users can only create their own user document.
    // 2. Any user can query the users collection to check for usernames.
    // 3. Authenticated users can only read, update, or delete their own profile.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow list: if true;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read/write to the calls collection if they are a participant.
    // The `list` permission is required for queries, and `read` for individual document gets.
    match /calls/{callId} {
        allow read, list: if request.auth != null;
        allow write: if request.auth != null && (request.resource.data.callerId == request.auth.uid || request.resource.data.receiverId == request.auth.uid);
        allow delete: if request.auth != null && (resource.data.callerId == request.auth.uid || resource.data.receiverId == request.auth.uid);
    }
    
    // Allow authenticated users to read/write to all other data 
    // (chats, friends, etc.), but not the users or calls collection which have stricter rules.
    match /{path=**}/documents/{document} {
      allow read, write: if request.auth != null;
    }
  }
}

// index: calls(participants ASC, timestamp DESC)
