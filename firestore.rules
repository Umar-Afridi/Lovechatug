rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Users can only create their own user document.
    // 2. Any user can query the users collection to check for usernames.
    // 3. Authenticated users can only read, update, or delete their own profile.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow list: if true;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // A user can only list, read, write, or delete calls if they are a participant in the call.
    match /calls/{callId} {
        allow read, list, write, delete: if request.auth != null && request.auth.uid in resource.data.participants;
    }
    
    // Allow authenticated users to read/write to all other data 
    // (chats, friends, etc.), but not the users or calls collection which have stricter rules.
    match /{path=**}/documents/{document} {
      allow read, write: if request.auth != null;
    }
  }
}
