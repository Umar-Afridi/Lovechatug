rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null;
    }

    match /friendRequests/{requestId} {
      allow create: if request.auth != null 
                    && request.resource.data.from == request.auth.uid
                    && request.resource.data.to != request.auth.uid
                    && request.resource.data.status == 'pending';
                    
      allow read, update, delete: if request.auth != null && (resource.data.to == request.auth.uid || resource.data.from == request.auth.uid);
      
      // Allow a user to list pending requests sent to them.
      // This is for the notification badge and friends page.
      // The query must be `where('to', '==', uid).where('status', '==', 'pending')`
      allow list: if request.auth != null 
                  && request.query.where[0][0] == 'to'
                  && request.query.where[0][1] == '=='
                  && request.query.where[0][2] == request.auth.uid
                  && request.query.where[1][0] == 'status'
                  && request.query.where[1][1] == '=='
                  && request.query.where[1][2] == 'pending';
    }
  }
}
