rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null;
    }

    match /friendRequests/{requestId} {
      allow create: if request.auth != null 
                    && request.resource.data.from == request.auth.uid
                    && request.resource.data.to != request.auth.uid
                    && request.resource.data.status == 'pending';
                    
      allow read, update, delete: if request.auth != null && (resource.data.to == request.auth.uid || resource.data.from == request.auth.uid);
      allow list: if request.auth != null && request.auth.uid == request.query.where.to && request.query.where.status == 'pending';
    }
  }
}
