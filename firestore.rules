rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // 1. Users can only create their own user document.
    // 2. Any user can query the users collection to check for usernames.
    // 3. Authenticated users can only read, update, or delete their own profile.
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow list: if true;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    // Composite index for calls collection
    // index: calls(participants ASC, timestamp DESC)
    // A user can only read, write, or delete a call if they are a participant.
    // Any authenticated user can list calls, but the app query ensures they only see their own.
    match /calls/{callId} {
        allow read, write, delete: if request.auth != null && request.auth.uid in resource.data.participants;
        allow list: if request.auth != null;
    }

    // Rules for friend requests
    match /friendRequests/{requestId} {
      // Any authenticated user can create a friend request.
      allow create: if request.auth != null;
      
      // A user can only list friend requests sent to them.
      allow list: if request.auth != null && request.query.resource.data.receiverId == request.auth.uid;
      
      // Only the sender or receiver can read, update or delete a friend request.
      allow read, update, delete: if request.auth != null && (request.auth.uid == resource.data.senderId || request.auth.uid == resource.data.receiverId);
    }
    
    // Allow authenticated users to read/write to chat data.
    match /chats/{chatId}/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
