rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    match /users/{userId} {
      allow read, list: if request.auth != null;
      allow create, update, delete: if request.auth != null && request.auth.uid == userId;
    }

    match /friendRequests/{requestId} {
      allow create: if request.auth != null 
                    && request.resource.data.from == request.auth.uid
                    && request.resource.data.to != request.auth.uid
                    && request.resource.data.status == 'pending';
                    
      allow read, list: if request.auth != null && (resource.data.to == request.auth.uid || resource.data.from == request.auth.uid);
      allow update: if request.auth != null && (resource.data.to == request.auth.uid || resource.data.from == request.auth.uid);
      allow delete: if request.auth != null && resource.data.to == request.auth.uid;
      
    }
  }
}
