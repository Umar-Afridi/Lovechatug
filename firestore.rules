rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Allow logged-in users to list all users for search functionality
    match /users/{userId} {
      allow create: if request.auth != null && request.auth.uid == userId;
      allow read, update, delete: if request.auth != null && request.auth.uid == userId;
      allow list: if request.auth != null;
    }

    match /friendRequests/{requestId} {
      // Any authenticated user can create a friend request if the data is valid.
      allow create: if request.auth != null 
                    && request.resource.data.from == request.auth.uid
                    && request.resource.data.status == 'pending';
                    
      // The recipient can read, update (accept/reject), or delete the request.
      // The sender can also read the request to see its status.
      allow read, update, delete: if request.auth != null && (resource.data.to == request.auth.uid || resource.data.from == request.auth.uid);
      
      // Allow users to list requests sent to them.
      allow list: if request.auth != null && request.query.where('to', '==', request.auth.uid).size() > 0;
    }
  }
}
